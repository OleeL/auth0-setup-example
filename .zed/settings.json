{
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "basic"
        },
        "python": {
          "pythonPath": "be/env/bin/python"
        }
      }
    },
    "eslint": {
      "settings": {
        "problems": {
          "shortenToSingleLine": true
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "tsdk": "fe/node_modules/typescript/lib"
        },
        "javascript": {
          "tsdk": "fe/node_modules/typescript/lib"
        }
      }
    }
  },
  "format_on_save": "language_server"
}
